{
  "extends": [
    "react-app",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "prettier"
  ],
  "rules": {
    "react/no-unescaped-entities": ["off"],
    "indent": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["error"],
    "import/no-unresolved": "off"
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "alias": [
        ["~", "./src"],
        ["@", "./src/assets"]
      ]
    }
  }
}
